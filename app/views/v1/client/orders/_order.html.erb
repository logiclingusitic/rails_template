<div id="<%= dom_id order %>">

<div class="bg-white rounded-lg shadow-md p-6">
  <div class="flex justify-between mb-6">
    <h2 class="text-2xl font-bold">Order Receipt</h2>
    <p class="text-gray-500">#<%= order.id %></p>
  </div>

  <div class="border-b border-gray-300 pb-4 mb-4">
    <div class="flex justify-between">
      <p class="text-gray-600">Date:</p>
      <p class="text-gray-800"><%= order.created_at %></p>
    </div>
    <div class="flex justify-between">
      <p class="text-gray-600">Customer:</p>
      <p class="text-gray-800"><%= order.customer_name %></p>
    </div>
    <div class="flex justify-between">
      <p class="text-gray-600">Email:</p>
      <p class="text-gray-800"><%= order.user.email %></p>
    </div>
    <div class="flex justify-between">
      <p class="text-gray-600">Payment Method:</p>
      <p class="text-gray-800"><%= order.payment_method %></p>
    </div>
  </div>

  <div>
    <h3 class="text-xl font-semibold mb-2">Order Items</h3>
    <table class="w-full">
      <thead>
        <tr>
          <th class="py-2">Product</th>
          <th class="py-2">Quantity</th>
          <th class="py-2">Price</th>
        </tr>
      </thead>
      <tbody>
      <% order.order_items.each do |order_item| %>

        <tr class="w-full text-center">
          <td class="py-2"><%= order_item.product_name %></td>
          <td class="py-2"><%= order_item.quantity %></td>
          <td class="py-2">$<%= order_item.price %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-6">
    <div class="flex justify-between">
      <p class="text-gray-600">Subtotal:</p>
      <p class="text-gray-800">$<%= order.subtotal %></p>
    </div>
    <div class="flex justify-between">
      <p class="text-gray-600">Tax (10%):</p>
      <p class="text-gray-800">$<%= order.tax %></p>
    </div>
    <div class="flex justify-between">
      <p class="text-gray-600">Total:</p>
      <p class="text-gray-800">$<%= order.total %></p>
    </div>
  </div>

  <div class="mt-6">
    <p class="text-gray-500">Thank you for your order!</p>
  </div>
</div>


</div>
