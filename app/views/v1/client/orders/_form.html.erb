    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :customer_name, class: "block font-bold" %>
    <%= form.text_field :customer_name, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :shipping_address, class: "block font-bold" %>
    <%= form.text_area :shipping_address, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :phone_number, class: "block font-bold" %>
    <%= form.text_field :phone_number, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <%# <div class="mb-4">
    <%= form.label :payment_method, class: "block font-bold" %>
    <%# <%= form.text_field :payment_method, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  <%# </div> %>

  <div>
    <%= form.submit class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded font-bold" %>
  </div>
<% end %>
